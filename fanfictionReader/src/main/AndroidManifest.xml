<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spicymango.fanfictionreader"
    android:installLocation="preferExternal"
    android:versionCode="56"
    android:versionName="1.46b">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppActionBar">
        <activity
            android:name=".menu.mainmenu.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.browsemenu.BrowseMenu"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".filter.FilterMenu"
            android:label="@string/menu_story_filter_by"
            android:theme="@style/Dialog"></activity>
        <activity android:name="Settings"></activity>

        <service android:name="LibraryDownloader"></service>

        <activity android:name="com.spicymango.fanfictionreader.activity.reader.StoryDisplayActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="m.fanfiction.net" />
                <data android:host="www.fanfiction.net" />
                <!--                 <data android:host="m.fictionpress.com"/> -->
                <!--                 <data android:host="www.fictionpress.com" /> -->
                <data android:pathPrefix="/s/" />

                <category android:name="android.intent.category.DEFAULT" />
                <!-- The BROWSABLE category is required to get links from web pages. -->
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LibraryMenuActivity"
            android:label="@string/menu_library_title"></activity>

        <provider
            android:name="com.spicymango.fanfictionreader.provider.StoryProvider"
            android:authorities="com.spicymango.fanfictionreader.provider"
            android:exported="false"></provider>

        <activity android:name=".activity.NavigationMenuActivity"></activity>
        <activity
            android:name=".activity.StoryMenuActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".activity.SearchStoryActivity"
            android:label="@string/menu_search_title"></activity>
        <activity
            android:name=".activity.CommunityMenuActivity"
            android:label="@string/menu_navigation_title_community"></activity>
        <activity
            android:name=".activity.AuthorMenuActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".activity.SearchAuthorActivity"
            android:label="@string/menu_search_title"></activity>
        <activity android:name=".activity.AccountActivity"></activity>
        <activity android:name=".activity.LogInActivity"></activity>
    </application>

</manifest>